<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo App</title>
    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <div id="main">

        <div class="container">
            <div class="heading">
                <h1>TO-Do App</h1>
        </div>

        <!-- Form TO create a task -->
        <form action="/create-task" method="post" class="todo-from">
            <table class="table">
                
                <thead class="head">
                    <tr class="table-row">
                        <th>Add Taks</th>
                        <th>Category</th>
                        <th>Date</th>
                    </tr>
                </thead>
                
                <tbody>
                    <tr>
                        <td class="input"><input type="text" name="description" placeholder="What Do You Need To DO" required></td>
                        <td class="select">
                            <select name="category" class="sink">
                                <option><p>Choose a Category</p></option>
                                <option class="pink">PERSONAL</option>
                                <option class="blue">WORK</option>
                                <option class="green">SCHOOL</option>
                                <option class="black">CLEANING</option>
                                <option class="red">OTHER</option>
                            </select>
                        </td>
                        <td><input type="date" name="date" id="date" required></td>  
                    </tr>
                    <td><input type="submit" class="" id="add" value="Add Task"></td>
                </tbody>
            </table>
        </form>
    </div>
    <div class="box">
        <div class="sub-heading">
            <h2>Task List</h2>
            <hr>
        </div>
        <form action="/delete-task" method="get">
            
            <table class="table1">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Task</th>
                        <th>Due Date</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <% for(let i of task) {%>
                    <tr class="box1"> 
                        <td><input type="checkbox" name="<%=i._id%>" class="check"></td>
                        <td><p id="task-description"><%=i.description%></td>
                        <td><p id="due-date"><%=i.date%></p></td>
                        <td><p id="task-category"><%=i.category%></p></td>
                        
                    </tr>
                    <%}%>
                </table>
                <td><input type="submit"  id="delete" value="Delete Task"></td>
            </form>
        </div>
    </div>
    </body>

    </html>